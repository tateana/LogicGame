<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:left="@dimen/popup_shadow_layout_margin">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="#55000000"
                android:endColor="#00000000"
                android:angle="90"
                />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:left="@dimen/popup_top_layout_margin"
        android:top="@dimen/popup_top_layout_margin"
        android:bottom="@dimen/popup_top_layout_margin"
        android:right="@dimen/popup_top_layout_margin">
        <bitmap android:src="@drawable/ig_popup_bg" android:tileMode="repeat"/>
    </item>
    <item android:left="@dimen/popup_bottom_layout_margin"
        android:top="@dimen/popup_bottom_layout_margin"
        android:bottom="@dimen/popup_bottom_layout_margin"
        android:right="@dimen/popup_bottom_layout_margin">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:color="#C1AA80"
                android:width="2dp"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:left="@dimen/popup_bottom_layout_margin"
        android:top="@dimen/popup_bottom_layout_margin"
        android:bottom="@dimen/popup_bottom_layout_margin"
        android:right="@dimen/popup_bottom_layout_margin">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:color="#BA9C67"
                android:width="1dp"
 />
            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>