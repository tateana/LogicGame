<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="false"
    android:clipChildren="false"
    style="@style/AppTheme">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/ig_main_logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/start"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        style="@style/NavigationButton"
        android:contentDescription="@string/start"
        android:src="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/restart"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/start"
        style="@style/NavigationButton"
        android:src="@android:drawable/ic_menu_revert"
        android:focusable="true" />


    <RadioGroup
        android:id="@+id/difficultyLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:background="@drawable/level_easy"
            android:button="@android:color/transparent"
            android:text="@string/easy"
            android:gravity="center_horizontal|top"
            style="@style/AppTheme"
            android:layout_marginRight="@dimen/level_option_margin" />

        <RadioButton
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/level_normal"
            android:button="@android:color/transparent"
            android:text="@string/normal"
            android:gravity="center_horizontal|top"
            style="@style/AppTheme"
            android:layout_marginRight="@dimen/level_option_margin"/>

        <RadioButton
            android:id="@+id/hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/level_hard"
            android:text="@string/hard"
            android:gravity="center_horizontal|top"
            android:button="@android:color/transparent"
            style="@style/AppTheme" />
    </RadioGroup>

    <ImageButton
        android:id="@+id/reading"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        style="@style/NavigationButton"
        android:background="@drawable/toggle_button"
        android:src="@mipmap/ic_audio_reading"
        />

    <ImageButton
        android:id="@+id/music"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/reading"
        style="@style/NavigationButton"
        android:background="@drawable/toggle_button"
        android:src="@mipmap/ic_music"
        />


    <ImageButton
        android:id="@+id/showLevels"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        style="@style/NavigationButton"
        android:contentDescription="@string/start"
        android:src="@mipmap/ic_map"
        android:layout_alignParentStart="true" />



</RelativeLayout>
